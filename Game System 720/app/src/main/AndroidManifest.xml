<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jfarina.gamesystem720">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivityController"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".friends.messages.activities.FriendsActivityController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.activities.HomeActivityController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.activities.AddUserActivityController"
            android:screenOrientation="portrait"
            android:parentActivityName=".login.activities.HomeActivityController"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jfarina.gamesystem720.login.activities.HomeActivityController"/>
        <activity
            android:name=".login.activities.SignInActivityController"
            android:screenOrientation="portrait"
            android:parentActivityName=".login.activities.HomeActivityController"/>
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.jfarina.gamesystem720.login.activities.HomeActivityController"/>
        <activity
            android:name=".store.activities.StoreActivityController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomePageActivityController"
            android:screenOrientation="portrait" />
    </application>

</manifest>